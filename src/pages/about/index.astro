import PageLayout from '@/layouts/CommonPage.astro'
import Substats from '@/components/about/Substats.astro'
import ToolSection from '@/components/about/ToolSection.astro'
import Signature from '@/components/pages/Signature.astro'
import zotero from '@/assets/tools/zotero.png'

const headings = [
  {
    depth: 2,
    slug: 'tools',
    text: 'Tools'
  },
  {
    depth: 2,
    slug: 'social-networks',
    text: 'Social Networks'
  },
  {
    depth: 2,
    slug: 'education',
    text: 'Education'
  },
  {
    depth: 2,
    slug: 'experience',
    text: 'Experience'
  },
  {
    depth: 2,
    slug: 'about-blog',
    text: 'About Blog'
